extends ../../layouts/common

block content

	h1
		span Users
	a.btn.btn.btn-success(href='/users/create' type='button') New
	a.btn.btn.btn-danger(href='/users/delete' type='button') Delete
	.d-flex.align-items-end.flex-column
		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input(type="text", name ="q", class="form-control")
			button.btn.btn-outline-dark.ml-2 Search
	table.table
		thead
			tr
				th(scope='col') Name
				th(scope='col') Phone
				th(scope='col') Action
		tbody
			each user in users
				tr 
					td= user.name
					td= user.phone
					td
						a.btn.btn-outline-dark(href='/users/' + user.id) View 