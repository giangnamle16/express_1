extends ../../layouts/common

block content
	.container.col-6
		h1 Create user
		if errors 
			each error in errors
				.alert.alert-danger= error
		form(action="/users/create", method="POST")
			.mb-3
				label.form-label(for="name") Name
				input#name.form-control(name="name" type='text' value= values ? values.name : '')
			.mb-3
				label.form-label(for="phone") Phone
				input#phone.form-control(name="phone" stype='text' value= values ? values.phone : '')
			button.btn.btn-primary Create